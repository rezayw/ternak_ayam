---
import { randomUUID } from "node:crypto";
import { db } from "@/lib/db";
import "../../styles/design-system.css";
import "../../styles/dashboard.css";

const sessionId = Astro.cookies.get("session")?.value;
if (!sessionId) return Astro.redirect("/login");

let csrf = Astro.cookies.get("csrf")?.value;
if (!csrf) {
  csrf = randomUUID();
  Astro.cookies.set("csrf", csrf, {
    httpOnly: true,
    sameSite: "strict",
    secure: true,
    path: "/"
  });
}

const currentUser = await db.user.findUnique({ where: { id: sessionId } });
if (!currentUser || currentUser.role !== "ADMIN") {
  return Astro.redirect("/dashboard");
}

const users = await db.user.findMany({
  select: { id: true, email: true, role: true, status: true },
  orderBy: { email: "asc" }
});

const pendingUsers = users.filter(u => u.status === "PENDING");
const activeUsers = users.filter(u => u.status === "ACTIVE");
const rejectedUsers = users.filter(u => u.status === "REJECTED");

const successParam = Astro.url.searchParams.get("success");
const showSuccess = successParam === "1";
---

<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kelola Users - Ternak Ayam</title>
  </head>
  <body>
    <nav>
      <div class="nav-brand">
        <img src="/images/logo.png" alt="Ternak Ayam logo" />
        <span>Ternak Ayam</span>
      </div>
      <div class="nav-links">
        <a href="/dashboard">Dashboard</a>
        <a href="/laporan">Laporan</a>
        <form method="POST" action="/api/auth/logout" style="display: inline;">
          <input type="hidden" name="csrf" value={csrf} />
          <button type="submit" class="btn btn-danger">Logout</button>
        </form>
      </div>
    </nav>

    <div class="container">
      <div class="header">
        <h1>Kelola Users & Role</h1>
        <p>Atur role setiap user: ADMIN, SUPERVISOR, STAFF, atau USER</p>
      </div>

      {showSuccess && (
        <div class="success-banner">
          <div class="success-icon"></div>
          <div class="success-content">
            <h3>Role Berhasil Diupdate!</h3>
            <p>Perubahan role user telah tersimpan.</p>
          </div>
        </div>
      )}

      {pendingUsers.length > 0 && (
        <div class="glass-card" style="padding: 1.5rem; margin-bottom: 1.5rem; background: rgba(255, 193, 7, 0.05); border: 1px solid rgba(255, 193, 7, 0.2);">
          <h2 style="margin: 0 0 1rem; color: #ffc107; display: flex; align-items: center; gap: 0.5rem;">
            ⏳ Pending Approval ({pendingUsers.length})
          </h2>
          <p style="margin: 0 0 1rem; color: #ccc;">User yang menunggu approval. Approve untuk mengaktifkan akun atau Reject untuk menolak.</p>
          
          <div style="overflow:auto; border:1px solid rgba(255,193,7,0.15); border-radius: 12px;">
            <table style="width:100%; border-collapse: collapse; min-width: 600px;">
              <thead style="background: rgba(0,0,0,0.3); border-bottom: 2px solid rgba(255,193,7,0.25);">
                <tr>
                  <th style="text-align:left; padding: 14px 16px; color:#ffc107; font-weight: 700;">Email</th>
                  <th style="text-align:left; padding: 14px 16px; color:#ffc107; font-weight: 700;">Role Default</th>
                  <th style="text-align:left; padding: 14px 16px; color:#ffc107; font-weight: 700;">Action</th>
                </tr>
              </thead>
              <tbody>
                {pendingUsers.map((u, idx) => (
                  <tr style={`background:${idx % 2 === 0 ? 'rgba(255,255,255,0.02)' : 'rgba(0,0,0,0.15)'}; border-bottom: 1px solid rgba(255,255,255,0.05);`}>
                    <td style="padding: 14px 16px; color:#e8faff; font-weight:600;">{u.email}</td>
                    <td style="padding: 14px 16px;">
                      <span style="padding: 6px 12px; border-radius: 999px; font-size: 0.85rem; font-weight: 700; background:rgba(158,158,158,0.15); color:#9e9e9e;">
                        {u.role}
                      </span>
                    </td>
                    <td style="padding: 14px 16px; display: flex; gap: 0.5rem; flex-wrap: wrap;">
                      <form method="POST" action="/api/admin/approve-user" style="display:inline;">
                        <input type="hidden" name="csrf" value={csrf} />
                        <input type="hidden" name="userId" value={u.id} />
                        <input type="hidden" name="action" value="approve" />
                        <button type="submit" class="btn btn-primary" style="padding: 10px 16px; font-size: 0.9rem;">✓ Approve</button>
                      </form>
                      <form method="POST" action="/api/admin/approve-user" style="display:inline;">
                        <input type="hidden" name="csrf" value={csrf} />
                        <input type="hidden" name="userId" value={u.id} />
                        <input type="hidden" name="action" value="reject" />
                        <button type="submit" class="btn btn-danger" style="padding: 10px 16px; font-size: 0.9rem;">✗ Reject</button>
                      </form>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      )}

      <div class="glass-card" style="padding: 1.5rem;">
        <div style="display:flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; gap: 1rem; flex-wrap: wrap;">
          <div>
            <h2 style="margin: 0;">Daftar User</h2>
            <p style="margin: 0.25rem 0 0; color: #999;">Total {activeUsers.length} akun aktif</p>
          </div>
          <div style="display:flex; gap:0.75rem; flex-wrap: wrap;">
            <div style="padding: 8px 16px; background: rgba(0,255,200,0.1); border-radius: 8px; border: 1px solid rgba(0,255,200,0.2);">
              <div style="font-size: 0.85rem; color: #999;">Admin</div>
              <div style="font-size: 1.25rem; font-weight: 700; color: #0ef;">{users.filter(u => u.role === "ADMIN").length}</div>
            </div>
            <div style="padding: 8px 16px; background: rgba(123,159,245,0.1); border-radius: 8px; border: 1px solid rgba(123,159,245,0.2);">
              <div style="font-size: 0.85rem; color: #999;">Supervisor</div>
              <div style="font-size: 1.25rem; font-weight: 700; color: #7b9ff5;">{users.filter(u => u.role === "SUPERVISOR").length}</div>
            </div>
            <div style="padding: 8px 16px; background: rgba(255,193,7,0.1); border-radius: 8px; border: 1px solid rgba(255,193,7,0.2);">
              <div style="font-size: 0.85rem; color: #999;">Staff</div>
              <div style="font-size: 1.25rem; font-weight: 700; color: #ffc107;">{users.filter(u => u.role === "STAFF").length}</div>
            </div>
            <div style="padding: 8px 16px; background: rgba(158,158,158,0.1); border-radius: 8px; border: 1px solid rgba(158,158,158,0.2);">
              <div style="font-size: 0.85rem; color: #999;">User</div>
              <div style="font-size: 1.25rem; font-weight: 700; color: #9e9e9e;">{users.filter(u => u.role === "USER").length}</div>
            </div>
          </div>
        </div>

        <div class="info-box" style="margin-bottom: 1.5rem;">
          <h3>Hierarki Role:</h3>
          <ul style="margin: 0.5rem 0;">
            <li><strong>ADMIN</strong> - Full access: kelola users, approve/pin/lock diskusi, input data, upload file, lihat semua laporan</li>
            <li><strong>SUPERVISOR</strong> - Approve/pin komentar staff, input data, upload file, lihat laporan tim</li>
            <li><strong>STAFF</strong> - Input data harian, upload file, komentar (pending approval), lihat data sendiri</li>
            <li><strong>USER</strong> - Read-only: hanya bisa lihat dashboard & laporan, tidak bisa input/upload/komentar</li>
          </ul>
        </div>

        <div style="overflow:auto; border:1px solid rgba(255,255,255,0.08); border-radius: 12px;">
          <table style="width:100%; border-collapse: collapse; min-width: 600px;">
            <thead style="background: rgba(0,0,0,0.3); border-bottom: 2px solid rgba(0,255,200,0.15);">
              <tr>
                <th style="text-align:left; padding: 14px 16px; color:#0ef; font-weight: 700;">Email</th>
                <th style="text-align:left; padding: 14px 16px; color:#0ef; font-weight: 700;">Role Saat Ini</th>
                <th style="text-align:left; padding: 14px 16px; color:#0ef; font-weight: 700;">Ubah Role</th>
                <th style="text-align:left; padding: 14px 16px; color:#0ef; font-weight: 700;">Deskripsi</th>
              </tr>
            </thead>
            <tbody>
              {activeUsers.map((u, idx) => (
                <tr style={`background:${idx % 2 === 0 ? 'rgba(255,255,255,0.02)' : 'rgba(0,0,0,0.15)'}; border-bottom: 1px solid rgba(255,255,255,0.05);`}>
                  <td style="padding: 14px 16px; color:#e8faff; font-weight:600;">{u.email}</td>
                  <td style="padding: 14px 16px;">
                    <span style={`padding: 6px 12px; border-radius: 999px; font-size: 0.85rem; font-weight: 700; ${
                      u.role === 'ADMIN' ? 'background:rgba(0,255,200,0.15); color:#0ef;' :
                      u.role === 'SUPERVISOR' ? 'background:rgba(123,159,245,0.15); color:#7b9ff5;' :
                      u.role === 'STAFF' ? 'background:rgba(255,193,7,0.15); color:#ffc107;' :
                      'background:rgba(158,158,158,0.15); color:#9e9e9e;'
                    }`}>
                      {u.role}
                    </span>
                  </td>
                  <td style="padding: 14px 16px;">
                    <form method="POST" action="/api/admin/role" style="display:flex; align-items:center; gap: 0.5rem; flex-wrap: wrap;">
                      <input type="hidden" name="csrf" value={csrf} />
                      <input type="hidden" name="redirectTo" value="/admin/users?success=1" />
                      <input type="hidden" name="userId" value={u.id} />
                      <select name="role" style="padding: 10px 12px; border-radius: 8px; background:#0b1720; color:#e8faff; border:1px solid rgba(0,255,200,0.25); font-weight: 600;">
                        <option value="ADMIN" selected={u.role === "ADMIN"}>ADMIN</option>
                        <option value="SUPERVISOR" selected={u.role === "SUPERVISOR"}>SUPERVISOR</option>
                        <option value="STAFF" selected={u.role === "STAFF"}>STAFF</option>
                        <option value="USER" selected={u.role === "USER"}>USER</option>
                      </select>
                      <button type="submit" class="btn btn-primary" style="padding: 10px 16px;">Update</button>
                    </form>
                  </td>
                  <td style="padding: 14px 16px; color:#9ac; font-size: 0.9rem; display: flex; align-items: center; gap: 6px;">
                    {u.role === 'USER' ? <><img src="/images/icon-view.png" alt="view" style="width:18px;height:18px;" /> Baca saja</> : 
                     u.role === 'STAFF' ? <><img src="/images/icon-edit.png" alt="edit" style="width:18px;height:18px;" /> Input & upload</> : 
                     u.role === 'SUPERVISOR' ? <><img src="/images/icon-approve.png" alt="approve" style="width:18px;height:18px;" /> Approve/pin/lock</> : 
                     <><img src="/images/icon-key.png" alt="admin" style="width:18px;height:18px;" /> Full access</>}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>

      <div class="back-link" style="margin-top: 2rem;">
        <a href="/dashboard">← Kembali ke Dashboard</a>
      </div>
    </div>
  </body>
</html>
